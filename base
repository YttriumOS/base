#!/bin/bash

PI_FA(){
set -o pipefail
}

MAIN_PK() {
sudo xbps-install -Syu -u xbps && sudo xbps-install -Syu
sudo xbps-install xfce4 xfce4-whiskermenu-plugin xorg-minimal xorg-fonts gvfs papirus-icon-theme arc-theme evince celluloid torbrowser-launcher
}

SRT_SEV(){
sudo ln -s /etc/sv/dbus /var/service
sudo ln -s /etc/sv/elogind /var/service
sudo reboot
}

#runfunctions

PI_FA 
MAIN_PK || MAIN_PK 
SRT_SEV
